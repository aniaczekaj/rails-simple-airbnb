<div class='container'>
  <%simple_form_for(flat) do |f|%>
    <% if @restaurant.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
    <div class="form-group">
      <% f.label :name %>
      <% f.input :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <% f.label :address %>
      <% f.input :address, class: "form-control" %>
    </div>
    <div class="form-group">
      <% f.label :description %>
      <% f.input :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <% f.label :number_of_guests %>
      <% f.input :number_of_guests, class: "form-control" %>
    </div>
    <div class="form-group">
      <% f.label :price_per_night %>
      <% f.input :price_per_night, class: "form-control" %>
    </div>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>
</div>
