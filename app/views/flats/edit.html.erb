<div class='container'>
  <h1>Edit flat <%=@flat.name%></h1>
  <%=simple_form_for(@flat) do |f|%>
  <% if @flat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.input :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :address, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :number_of_guests, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :price_per_night, class: "form-control" %>
    </div>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>
</div>
